{
    "name": "dreamyi12/casbin",
    "keywords": [
        "hyperf",
        "casbin",
        "permission",
        "access-control",
        "authorization",
        "rbac",
        "acl",
        "abac"
    ],
    "description": "An authorization library that supports access control models like ACL, RBAC, ABAC in hyperf. ",
    "authors": [
        {
            "name": "Dreamyi12",
            "homepage": "https://github.com/dreamyi12",
            "role": "Developer"
        }
    ],
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.4",
        "ext-swoole": ">=4.5",
        "hyperf/database": "^3.0",
        "hyperf/db-connection": "^3.0",
        "hyperf/cache": "^3.0",
        "hyperf/utils": "^3.0",
        "hyperf/config": "^3.0",
        "hyperf/logger": "^3.0",
        "casbin/casbin": "^3.6",
        "hyperf/command": "^3.0",
        "casbin/psr3-bridge": "^1.3"
    },
    "require-dev": {
        "hyperf/testing": "^3.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Dreamyi12\\Casbin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dreamyi12\\Casbin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always"
    },
    "extra": {
        "hyperf": {
            "config": "Dreamyi12\\Casbin\\ConfigProvider"
        }
    }
}
